<div class="container post-container project-item">
  <!-- Portfolio Item Heading -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
            <%= @project.title %>
          </h1>
      </div>
  </div>
  <!-- /.row -->

  <!-- Portfolio Item Row -->
  <div class="row">

      <div class="col-md-8">
          <%= image_tag @project.image, class: 'img-responsive main-portfolio-image' %>
      </div>

      <div class="col-md-4">
          <%= @project.body.html_safe %>
      </div>

  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->
  <div class="row">

      <div class="col-lg-12">
          <h3 class="page-header">Other Projects</h3>
      </div>

      <% @projects.each do |project| %>
        <div class="col-sm-3 col-xs-6">
          <%= link_to project_path(project) do %>
            <%= image_tag project.image, class: 'img-responsive portfolio-item' %>
          <% end %>
        </div>
      <% end %>
  </div>
  <!-- /.row -->
</div>
