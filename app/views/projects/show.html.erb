<div class="container post-container project-item">
  <!-- Portfolio Item Heading -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
            <%= @project.title %>
          </h1>
      </div>
  </div>
  <!-- /.row -->

  <!-- Portfolio Item Row -->
  <div class="row">

      <div class="col-md-5">
          <%= image_tag @project.image, class: 'img-responsive main-portfolio-image' %>
      </div>

      <div class="col-md-7">
          <%= @project.body.html_safe %>
      </div>

  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->
  <div class="row">
    <div class="col-md-6">
      <%= link_to projects_path, :class => 'btn btn-primary' do %>
        Back to all projects
      <% end %>
    </div>
  </div>
  <!-- /.row -->
</div>
