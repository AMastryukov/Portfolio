<!-- Page Content -->
<div class="container blog-container">

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <% @sorted_posts.each do |post| %>
              <h2>
                <%= link_to post_path(post) do %>
                  <%= post.title %>
                <% end %>
              </h2>

              <p>
                <span class="fa fa-clock-o"></span>
                <%= post.created_at.in_time_zone('Eastern Time (US & Canada)').strftime("Posted on %A, %d %B %Y at %H:%M EST") %>
              </p>
                <% if post.image.present? %>
                  <%= image_tag(post.image, :class => 'img-responsive blog-post-image') %>
                <% end %>
              <p>
                <%= Nokogiri::HTML.parse(post.body).css('p').first.text %>
              </p>
                <%= link_to post_path(post), :class => 'btn btn-primary read-more-btn' do %>
                  Read More
                <% end %>
                <hr>
            <% end %>
        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Older posts</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="list-unstyled">
                            <li>
                              <a href="#">Category Name</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /.row -->
            </div>
        </div>
    </div>
</div>
